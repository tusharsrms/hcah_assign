<div class='col-md-8 col-md-offset-2 panel panel-default'>
  <div class='panel-body'>
    <p id="notice"><%= notice %></p>
    <h2>HCAH</h2>
    <h4> User Details</h4>
    <div class='panel panel-default'>
      <div class='panel-body'>
        <table class='table table-hover no-border-top'>
          <tr>
            <th> Name </th>
            <th> Address1 </th>
            <th> Address2 </th>
            <th> City </th>
            <th> State </th>
            <th> Zipcode </th>
            <th> PDF </th>
          </tr>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.fullname %></td>
              <td><%= user.address1 %></td>
              <td><%= user.address2 %></td>
              <td><%= user.city %></td>
              <td><%= user.state %></td>
              <td><%= user.zipcode %></td>
              <td><%= link_to "Download", user_path(user, format: :pdf), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>